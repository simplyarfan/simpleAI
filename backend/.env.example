# Enterprise AI Hub Backend Configuration

# Environment
NODE_ENV=production

# Server Configuration
PORT=5000

# Database (Production PostgreSQL - Set these in your hosting platform)
POSTGRES_URL=postgresql://username:password@hostname:port/database
DATABASE_URL=postgresql://username:password@hostname:port/database

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your_super_secure_jwt_secret_at_least_32_characters_long
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_super_secure_refresh_token_secret_at_least_32_characters_long

# Email Configuration (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@securemaxtech.com
EMAIL_PASS=your_gmail_app_password

# Company Configuration
COMPANY_DOMAIN=securemaxtech.com
ADMIN_EMAIL=admin@securemaxtech.com

# Frontend Configuration
FRONTEND_URL=https://thesimpleai.netlify.app

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Security
CORS_ORIGINS=https://thesimpleai.netlify.app,https://thesimpleai.vercel.app

# Hugging Face Configuration (Free API)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here